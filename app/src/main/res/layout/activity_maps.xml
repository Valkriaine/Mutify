<?xml version="1.0" encoding="utf-8"?>
<com.sothree.slidinguppanel.SlidingUpPanelLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:fitsSystemWindows="true"
        app:umanoPanelHeight="80dp"
        app:umanoShadowHeight="100dp"
        app:umanoParallaxOffset="400dp"
        app:umanoOverlay="true"
        app:umanoScrollableView="@id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        tools:context=".MapsActivity">




    <!--hosts the MapView and search bar-->
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">




        <!--this CardView hosts the search bar, add the actual search bar inside the ConstraintLayout below-->
        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:translationZ="100dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="40dp"
                card_view:cardCornerRadius="25dp">
            <no.danielzeller.blurbehindlib.BlurBehindLayout
                    android:id="@+id/searchbar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:blurRadius="80.0"
                    app:updateMode="continuously"
                    app:useTextureView="false"
                    app:blurTextureScale="0.4">
                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#99FFFFFF">



                    <!--todo search button, currently has no function-->
                    <androidx.appcompat.widget.AppCompatImageButton
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:background="#00FFFFFF"
                            android:src="@drawable/search_icon"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="10dp"/>


                    <!--todo add search box here-->


                </androidx.constraintlayout.widget.ConstraintLayout>
            </no.danielzeller.blurbehindlib.BlurBehindLayout>
        </androidx.cardview.widget.CardView>


        <!--This is the Maps fragment-->
        <fragment
                android:id="@+id/map"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".MapsActivity"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>





    <!--Bottom drawer, slide up to show the recyclerview-->
    <androidx.cardview.widget.CardView
            android:id="@+id/drawer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|top">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


            <!--this is the drawer handle, must be the same height as "app:umanoPanelHeight" defined at the top-->
            <!--holds anything view that will be displayed on the drawer when the drawer is closed-->
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:translationZ="0dp">

            <!--todo add buttons, titles, anything here-->
            <!--todo this is a dummy TextView, remove this-->
            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/dummyText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Slide up to open"
                    android:textSize="20sp"
                    android:layout_marginTop="20dp"
                    android:gravity="center_horizontal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

            <!--todo this is a dummy button, it will add a dummy item to the recyclerview when clicked-->
            <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/dummyButton"
                    android:text="Add"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/dummyText"
                    app:layout_constraintTop_toTopOf="parent"
                    android:textAlignment="center"
                    android:textSize="15sp"
                    android:layout_marginStart="10dp"
                    android:onClick="dummyButtonClicked"/>

            </androidx.constraintlayout.widget.ConstraintLayout>




            <!--the is the drawer content, hosts everything that will be displayed when the drawer is open-->
            <!--hosts the user's list of saved locations-->
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="80dp"
                    android:translationZ="0dp">

            <!--this is the recyclerview that will hold the list of locations the user has saved-->
            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:clipToPadding="false"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>



</com.sothree.slidinguppanel.SlidingUpPanelLayout>
